package in.co.rays.jdbc.preparedstatement;

import java.util.Iterator;
import java.util.List;
import java.util.Scanner;

public class TestMarksheetModel 
{
	public static void main(String[] args) throws Exception 
	{
		
		System.out.println("1: Add ");
		System.out.println("2: Update");
		System.out.println("3: Delete");
		System.out.println("4: Find By Roll No");
		System.out.println("5: Get Merit List");
		System.out.println("6: Search");
		
		Scanner sc = new Scanner(System.in);
		
		int s = sc.nextInt();
		
		switch(s)
		{
			case 1:
				testAdd();
				break;
				
			case 2:
				testUpdate();
				break;
				
			case 3: 
				testDelete();
				break;
				
			case 4:
				testGet();
				break;
				
			case 5:	
				testGetMeritList();
				break;
				
			case 6:
				testSearch();
				break;
		}
		sc.close();
	}
	
	public static void testAdd() throws Exception
	{
		MarksheetBean bean = new MarksheetBean();
		
		bean.setId(16);
		bean.setRollNo(116);
		bean.setName("Shivam");
		bean.setPhy(60);
		bean.setChem(50);
		bean.setMaths(55);
		
		MarksheetModel model = new MarksheetModel();
		
		int id = model.add(bean);
		System.out.println("Record inserted at id: " + id);
	}
	
	public static void testUpdate() throws Exception
	{
		MarksheetBean bean = new MarksheetBean();
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Enter id to Update:");
		
		bean.setId(sc.nextInt());
		
		System.out.println("Roll No: ");
		
		bean.setRollNo(sc.nextInt());
		
		System.out.println("Name: ");
		
		bean.setName(sc.next());
		
		System.out.println("Physics: ");
		
		bean.setPhy(sc.nextInt());
		
		System.out.println("Chemistry: ");
		
		bean.setChem(sc.nextInt());
		
		System.out.println("Maths: ");
		
		bean.setMaths(sc.nextInt());
		
		sc.close();
		
		MarksheetModel model = new MarksheetModel();
		
		model.update(bean);
		
	}
	
	public static void testDelete() throws Exception
	{
		MarksheetBean bean = new MarksheetBean();
		
		System.out.println("Enter id to delete:");
		
		Scanner sc = new Scanner(System.in);
		
		int s = sc.nextInt();
		
		bean.setId(s);
		
		sc.close();
		
		MarksheetModel model = new MarksheetModel();
		
		model.delete(bean);
	}
	
	public static void testGet() throws Exception 
	{
		MarksheetModel model = new MarksheetModel();
		MarksheetBean bean = new MarksheetBean();
		
		System.out.println("search by Roll No:");
		
		Scanner sc = new Scanner(System.in);
		
		int s = sc.nextInt();
		
		bean = model.get(s);
		
		sc.close();

		

		if (bean != null) 
		{
			System.out.print(" "+bean.getId());
			System.out.print(" "+bean.getName());
			System.out.print(" "+bean.getRollNo());
			System.out.print(" "+bean.getPhy());
			System.out.print(" "+bean.getChem());
			System.out.print(" "+bean.getMaths());
		} else {
			System.out.println("User Not Found....");
		}

	}
	
	public static void testGetMeritList() throws Exception 
	{
		MarksheetBean bean = new MarksheetBean();
		MarksheetModel model = new MarksheetModel();
		
		List<MarksheetBean> list = model.getMeritList();
		
		Iterator<MarksheetBean> it = list.iterator();
		
		while(it.hasNext())
		{
			bean= it.next();
			System.out.print(" "+bean.getId());
			System.out.print(" "+bean.getName());
			System.out.print(" "+bean.getRollNo());
			System.out.print(" "+bean.getPhy());
			System.out.print(" "+bean.getChem());
			System.out.print(" "+bean.getMaths());
			int total = bean.getPhy() + bean.getChem() + bean.getMaths();
			double percentage = ((total) / 3);
			System.out.print(" "+total);
			System.out.println(" "+percentage);
		}
		
	}
	
	public static void testSearch() throws Exception
	{
		MarksheetBean bean = new MarksheetBean();
		MarksheetModel model = new MarksheetModel();
		
		System.out.println("Enter Char to search:");
		
		Scanner sc = new Scanner(System.in);
		
		String s = sc.next();
		
		bean.setName(s);
		
		sc.close();
		
		List<MarksheetBean> list = model.search(bean);
		
		Iterator<MarksheetBean> it = list.iterator();
		
		while(it.hasNext())
		{
			bean= it.next();
			System.out.print(" "+bean.getId());
			System.out.print(" "+bean.getName());
			System.out.print(" "+bean.getRollNo());
			System.out.print(" "+bean.getPhy());
			System.out.print(" "+bean.getChem());
			System.out.println(" "+bean.getMaths());
		}
	}
	
}
